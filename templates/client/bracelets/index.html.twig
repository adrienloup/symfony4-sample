{% extends 'base.html.twig' %}
{% block title %}Earrings (Jewelry){% endblock %}
{% block body %}
<main>
  <h1 class="title">The bracelets</h1>
  <div class="jewelry">
    {% for jewel in bracelets %}
    <div class="jewel">
      <a href="{{ path('client.jewelry.single', { id: jewel.id, slug: jewel.slug, category: jewel.category|lower }) }}" class="jewel-inside">
        <img class="jewel-image" src="http://picsum.photos/id/{{ jewel.image }}/467/467" alt="{{ jewel.name }}">
        <div class="jewel-caption">
          <h2 class="jewel-title">{{ jewel.name }} - {{ jewel.category }}</h2>
          <strong class="jewel-price">{{ jewel.formattedPrice }} â‚¬</strong>
          <span class="jewel-reference">ref {{ jewel.formattedreference }}</span>
        </div>
      </a>
    </div>
    {% endfor %}
  </div>
</main>
{% endblock %}
