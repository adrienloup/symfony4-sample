{% extends 'base.html.twig' %}
{% block title %}Jewelry{% endblock %}
{% block body %}
<main>
  <h1 class="title">Lastest <span>({{ lastest|length }})</span></h1>
  <div class="jewelry">
    {% for jewel in lastest %}
    <div class="jewel">
      <a href="{{ path('client.jewelry.single', { id: jewel.id, slug: jewel.slug, category: jewel.category|lower }) }}" class="jewel-inside">
        <h3 class="jewel-title">{{ jewel.name }}</h3>
        <strong class="jewel-price">{{ jewel.formattedPrice }} €</strong>
      </a>
